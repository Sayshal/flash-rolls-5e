<section class="tab form-content {{tab.cssClass}}" data-group="primary-tabs" data-tab="{{tab.id}}">
  <p class="notes">{{localize "FLASH_ROLLS.settings.premiumFeatures.description"}}</p>

  <fieldset>
    <legend>{{localize "FLASH_ROLLS.settings.premiumFeatures.patreonAuth"}}</legend>

    <div class="form-group">
      <label>{{localize "FLASH_ROLLS.settings.premiumFeatures.apiKey"}}</label>
      <div class="form-fields">
        <input type="password" name="proxyApiKey" value="{{proxyApiKey}}"
              placeholder="crlngn_..." autocomplete="off" />
      </div>
      <p class="hint">{{localize "FLASH_ROLLS.settings.premiumFeatures.apiKeyHint"}}</p>
    </div>

    <div class="form-group buttons-row">
      <button type="button" data-action="authenticatePatreon" class="patreon-btn">
        <i class="fab fa-patreon"></i>
        {{localize "FLASH_ROLLS.settings.premiumFeatures.authenticateBtn"}}
      </button>
      <button type="button" data-action="testConnection" class="test-btn" {{#unless hasApiKey}}disabled{{/unless}}>
        <i class="fas fa-plug"></i>
        {{localize "FLASH_ROLLS.settings.premiumFeatures.testConnectionBtn"}}
      </button>
    </div>

    <div class="form-group connection-status patreon-status">
      <div class="status-indicator {{patreonStatusClass}}">
        <i class="fas {{patreonStatusIcon}}"></i>
        <span>{{patreonStatusText}}</span>
      </div>
    </div>
  </fieldset>
</section>
