<div class="dnd5e2 chat-card activation-card flash5e-ddb-attack">

    {{!-- <section class="card-header description collapsible collapsed">
        <header class="summary">
            <img class="gold-icon" src="{{ item.img }}" alt="{{ item.name }}">
            <div class="name-stacked border">
                <span class="title">{{ item.name }}</span>
                {{#if subtitle}}
                <span class="subtitle">{{{ subtitle }}}</span>
                {{/if}}
            </div>
        </header>
    </section> --}}

    {{#if rolls}}
    <section class="dice-roll">
      {{#each rolls}}
      <div class="dice-result">
        <div class="dice-formula">{{{formula}}}</div>

        {{{tooltipHtml}}}

        <h4 class="dice-total{{#if this.isSuccess}} success{{else if this.isFailure}} failure{{/if}}">{{{total}}}</h4>
      </div>
      {{/each}}
    </section>
    {{/if}}

    {{#if buttons}}
    <div class="card-buttons">
        {{#each buttons}}
        <button type="button" {{ dnd5e-dataset dataset }} alt="{{label}}">
            {{{ icon }}} <span>{{{ label }}}</span>
        </button>
        {{/each}}
    </div>
    {{/if}}

    {{#each supplements}}
    <p class="supplement">{{{ this }}}</p>
    {{/each}}

    {{#if properties}}
    <ul class="card-footer pills unlist">
        {{#each properties}}
        <li class="pill transparent">
            <span class="label">{{ this }}</span>
        </li>
        {{/each}}
    </ul>
    {{/if}}
</div>
