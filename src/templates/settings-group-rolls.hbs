<section
  class="form-content tab {{#if tab.active}} active{{/if}}" data-group="{{tab.group}}" data-tab="{{tab.id}}"
>
  <h4><i class="fas fa-globe"></i> {{localize "FLASH_ROLLS.ui.dialogs.worldSettingsLabel"}} <span class="toggle-hint">{{localize 'FLASH_ROLLS.ui.dialogs.toggleHints'}}</span></h4>
  <hr/>
  
  <div class="form-group">
    <label for="groupRollsMsgEnabled">{{fields.groupRollsMsgEnabled.label}}</label>
    <input type="checkbox" name="groupRollsMsgEnabled" id="groupRollsMsgEnabled" {{#if groupRollsMsgEnabled}}checked{{/if}} />
    <p class="hint">{{fields.groupRollsMsgEnabled.hint}}</p>
  </div>

  <div class="form-group">
    <label for="groupRollResultMode">{{fields.groupRollResultMode.label}}</label>
    <select name="groupRollResultMode" id="groupRollResultMode" data-current-value="{{groupRollResultMode}}">
      {{#each fields.groupRollResultMode.choices}}
      <option value="{{@key}}">
        {{this}}
      </option>
      {{/each}}
    </select>
    <p class="hint">{{{fields.groupRollResultMode.hint}}}</p>
  </div>

  <div class="form-group">
    <label for="showGroupDCToPlayers">{{fields.showGroupDCToPlayers.label}}</label>
    <input type="checkbox" name="showGroupDCToPlayers" id="showGroupDCToPlayers" {{#if showGroupDCToPlayers}}checked{{/if}} />
    <p class="hint">{{fields.showGroupDCToPlayers.hint}}</p>
  </div>

  <div class="form-group">
    <label for="showGroupResultToPlayers">{{fields.showGroupResultToPlayers.label}}</label>
    <input type="checkbox" name="showGroupResultToPlayers" id="showGroupResultToPlayers" {{#if showGroupResultToPlayers}}checked{{/if}} />
    <p class="hint">{{fields.showGroupResultToPlayers.hint}}</p>
  </div>

  <div class="form-group">
    <label for="groupRollNPCHidden">{{fields.groupRollNPCHidden.label}}</label>
    <input type="checkbox" name="groupRollNPCHidden" id="groupRollNPCHidden" {{#if groupRollNPCHidden}}checked{{/if}} />
    <p class="hint">{{fields.groupRollNPCHidden.hint}}</p>
  </div>

  <div class="form-group">
    <label for="interceptTidySheetsGroupRolls">{{fields.interceptTidySheetsGroupRolls.label}}</label>
    <input type="checkbox" name="interceptTidySheetsGroupRolls" id="interceptTidySheetsGroupRolls" {{#if interceptTidySheetsGroupRolls}}checked{{/if}} />
    <p class="hint">{{fields.interceptTidySheetsGroupRolls.hint}}</p>
  </div>
</section>
