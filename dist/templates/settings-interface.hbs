<section
  class="form-content tab {{#if tab.active}} active{{/if}}" data-group="{{tab.group}}" data-tab="{{tab.id}}"
>
  <h4><i class="fas fa-globe"></i> {{localize "FLASH_ROLLS.ui.dialogs.worldSettingsLabel"}} <span class="toggle-hint">{{localize 'FLASH_ROLLS.ui.dialogs.toggleHints'}}</span></h4>
  <hr/>

  <div class="form-group">
    <label for="showMenuOnLoad">{{fields.showMenuOnLoad.label}}</label>
    <input type="checkbox" name="showMenuOnLoad" id="showMenuOnLoad" {{#if showMenuOnLoad}}checked{{/if}} />
    <p class="hint">{{fields.showMenuOnLoad.hint}}</p>
  </div>

  <div class="form-group">
    <label for="showTokenVisionOnHover">{{fields.showTokenVisionOnHover.label}}</label>
    <input type="checkbox" name="showTokenVisionOnHover" id="showTokenVisionOnHover" {{#if showTokenVisionOnHover}}checked{{/if}} />
    <p class="hint">{{fields.showTokenVisionOnHover.hint}}</p>
  </div>

  <div class="form-group">
    <label for="compactMode">{{fields.compactMode.label}}</label>
    <input type="checkbox" name="compactMode" id="compactMode" {{#if compactMode}}checked{{/if}} />
    <p class="hint">{{fields.compactMode.hint}}</p>
  </div>

  <div class="form-group">
    <label for="menuLayout">{{fields.menuLayout.label}}</label>
    <select name="menuLayout" id="menuLayout" data-current-value="{{menuLayout}}">
      {{#each fields.menuLayout.choices}}
      <option value="{{@key}}">
        {{this}}
      </option>
      {{/each}}
    </select>
    <p class="hint">{{{fields.menuLayout.hint}}}</p>
  </div>

  <div class="form-group">
    <label for="maxIconsPerRow">{{fields.maxIconsPerRow.label}}</label>
    <input type="number" name="maxIconsPerRow" id="maxIconsPerRow" value="{{maxIconsPerRow}}" min="1" step="1" />
    <p class="hint">{{{fields.maxIconsPerRow.hint}}}</p>
  </div>

  <div class="form-group column">
    <label>{{fields.menuIconsLayout.label}}</label>
    <p class="hint">{{{fields.menuIconsLayout.hint}}}</p>
    <div class="icon-arrangement-container">
      <h5>
        <div>{{localize 'FLASH_ROLLS.ui.settings.moduleActionsTitle'}}</div>
        <div>{{localize 'FLASH_ROLLS.ui.settings.actorActionsTitle'}}</div>
      </h5>
      <ul class="module-action-icons sortable-icon-list" data-icon-type="moduleActions">
        {{#each menuIconsLayout.moduleActions as |icon|}}
          <li class="icon-item {{#unless icon.enabled}}disabled{{/unless}}"
              draggable="true"
              data-icon-id="{{icon.id}}"
              data-order="{{icon.order}}"
              data-enabled="{{icon.enabled}}">
            <div class="icon-controls">
              <input type="checkbox" class="icon-toggle" {{#if icon.enabled}}checked{{/if}} />
              <i class="drag-handle fas fa-grip-vertical"></i>
            </div>
            <i class="icon-preview fas {{icon.icon}}"></i>
            <div class="flash-icon">{{icon.label}}</div>
          </li>
        {{/each}}
      </ul>

      <ul class="actor-action-icons sortable-icon-list" data-icon-type="actorActions">
        {{#each menuIconsLayout.actorActions as |icon|}}
          <li class="icon-item {{#unless icon.enabled}}disabled{{/unless}}"
              draggable="true"
              data-icon-id="{{icon.id}}"
              data-order="{{icon.order}}"
              data-enabled="{{icon.enabled}}">
            <div class="icon-controls">
              <input type="checkbox" class="icon-toggle" {{#if icon.enabled}}checked{{/if}} />
              <i class="drag-handle fas fa-grip-vertical"></i>
            </div>
            <i class="icon-preview fas {{icon.icon}}"></i>
            <div class="flash-icon">{{icon.label}}</div>
          </li>
        {{/each}}
      </ul>
    </div>
  </div>
  
</section>