<section class="tab form-content {{tab.cssClass}}" data-group="primary-tabs" data-tab="{{tab.id}}">
  <p class="hint on">{{localize "FLASH_ROLLS.settings.premiumFeatures.description"}}</p>

  <fieldset>
    <legend>{{localize "FLASH_ROLLS.settings.premiumFeatures.patreonAuth"}}</legend>

    {{#if patronStatus.isPatron}}
      <div class="form-group patron-info">
        <div class="status-card success">
          <div class="status-header">
            <h3>{{localize "FLASH_ROLLS.settings.premiumFeatures.connected"}}</h3>
          </div>
          <div class="patron-details">
            <p><strong>{{localize "FLASH_ROLLS.settings.premiumFeatures.patronName"}}:</strong> {{patronStatus.name}}</p>
            <p><strong>{{localize "FLASH_ROLLS.settings.premiumFeatures.patronTier"}}:</strong> {{patronTierName}}</p>
          </div>
        </div>
      </div>

      <div class="form-group buttons-row">
        <button type="button" data-action="refreshSession" class="refresh-btn">
          <i class="fas fa-sync-alt"></i>
          {{localize "FLASH_ROLLS.settings.premiumFeatures.refreshBtn"}}
        </button>
        <button type="button" data-action="logout" class="logout-btn">
          <i class="fas fa-sign-out-alt"></i>
          {{localize "FLASH_ROLLS.settings.premiumFeatures.logoutBtn"}}
        </button>
      </div>
    {{else}}
      <div class="form-group">
        <p class="hint">{{localize "FLASH_ROLLS.settings.premiumFeatures.notConnected"}}</p>
      </div>

      <div class="form-group buttons-row">
        <button type="button" data-action="authenticatePatreon" class="patreon-btn">
          <i class="fab fa-patreon"></i>
          {{localize "FLASH_ROLLS.settings.premiumFeatures.authenticateBtn"}}
        </button>
      </div>

      <div class="form-group connection-status patreon-status">
        <div class="status-indicator {{patreonStatusClass}}">
          <i class="fas {{patreonStatusIcon}}"></i>
          <span>{{patreonStatusText}}</span>
        </div>
      </div>
    {{/if}}
  </fieldset>
</section>
